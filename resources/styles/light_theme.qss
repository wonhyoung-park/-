}

QCheckBox::indicator:hover {
    border-color: #4A90E2;
}

/* Radio Button */
QRadioButton {
    color: #2D3748;
    font-size: 14px;
    spacing: 8px;
}

QRadioButton::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #CBD5E0;
    border-radius: 10px;
    background-color: #FFFFFF;
}

QRadioButton::indicator:checked {
    background-color: #FFFFFF;
    border: 2px solid #4A90E2;
}

QRadioButton::indicator:checked::before {
    content: "";
    width: 10px;
    height: 10px;
    border-radius: 5px;
    background-color: #4A90E2;
}

QRadioButton::indicator:hover {
    border-color: #4A90E2;
}

/* Combo Box (Dropdown) */
QComboBox {
    background-color: #FFFFFF;
    border: 2px solid #E0E4E8;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #2D3748;
    min-width: 100px;
}

QComboBox:hover {
    border-color: #4A90E2;
}

QComboBox::drop-down {
    border: none;
    padding-right: 10px;
}

QComboBox::down-arrow {
    image: url(data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMTYiIGhlaWdodD0iMTYiIHZpZXdCb3g9IjAgMCAxNiAxNiIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48cGF0aCBkPSJNNCAxMGw0IDQgNC00IiBzdHJva2U9IiM0QTU1NjgiIHN0cm9rZS13aWR0aD0iMiIgc3Ryb2tlLWxpbmVjYXA9InJvdW5kIi8+PC9zdmc+);
    width: 16px;
    height: 16px;
}

QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    border: 1px solid #E0E4E8;
    border-radius: 6px;
    selection-background-color: #BEE3F8;
    padding: 4px;
}

/* Spin Box */
QSpinBox {
    background-color: #FFFFFF;
    border: 2px solid #E0E4E8;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #2D3748;
}

QSpinBox:focus {
    border-color: #4A90E2;
}

QSpinBox::up-button, QSpinBox::down-button {
    background-color: #F7FAFC;
    border: none;
    width: 20px;
}

QSpinBox::up-button:hover, QSpinBox::down-button:hover {
    background-color: #E8EDF2;
}

/* Progress Bar */
QProgressBar {
    border: none;
    border-radius: 8px;
    background-color: #E8EDF2;
    height: 20px;
    text-align: center;
    color: #4A5568;
    font-weight: 600;
}

QProgressBar::chunk {
    border-radius: 8px;
    background-color: #4A90E2;
}

/* Group Box */
QGroupBox {
    border: 2px solid #E0E4E8;
    border-radius: 8px;
    margin-top: 12px;
    padding: 16px;
    background-color: #FFFFFF;
    font-weight: 600;
    color: #2D3748;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 8px;
    background-color: #FFFFFF;
    color: #4A5568;
}

/* Label */
QLabel {
    color: #2D3748;
    font-size: 14px;
}

/* Status Bar */
QStatusBar {
    background-color: #F7FAFC;
    border-top: 1px solid #E0E4E8;
    color: #4A5568;
    font-size: 12px;
}

/* Menu Bar */
QMenuBar {
    background-color: #FFFFFF;
    border-bottom: 1px solid #E0E4E8;
    padding: 4px;
}

QMenuBar::item {
    background-color: transparent;
    padding: 8px 12px;
    color: #2D3748;
}

QMenuBar::item:selected {
    background-color: #EDF2F7;
    border-radius: 4px;
}

QMenu {
    background-color: #FFFFFF;
    border: 1px solid #E0E4E8;
    border-radius: 6px;
    padding: 4px;
}

QMenu::item {
    padding: 8px 24px;
    color: #2D3748;
}

QMenu::item:selected {
    background-color: #EDF2F7;
    border-radius: 4px;
}

/* Dialog */
QDialog {
    background-color: #F5F7FA;
}

/* Message Box */
QMessageBox {
    background-color: #FFFFFF;
}

QMessageBox QLabel {
    color: #2D3748;
}

/* Tool Tip */
QToolTip {
    background-color: #2D3748;
    color: #FFFFFF;
    border: none;
    border-radius: 4px;
    padding: 6px 10px;
    font-size: 12px;
}
