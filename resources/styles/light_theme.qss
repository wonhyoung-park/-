/* Light Theme for Smart Vocab Builder */

/* Main Window */
QMainWindow {
    background-color: #F5F7FA;
}

/* Tab Widget */
QTabWidget::pane {
    border: 1px solid #E0E4E8;
    background-color: #FFFFFF;
    border-radius: 8px;
}

QTabBar::tab {
    background-color: #E8EDF2;
    color: #4A5568;
    padding: 12px 32px;
    margin-right: 4px;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    font-size: 13px;
    font-weight: 500;
    min-width: 80px;
}

QTabBar::tab:selected {
    background-color: #4A90E2;
    color: #FFFFFF;
}

QTabBar::tab:hover:!selected {
    background-color: #D4DCE6;
}

/* Buttons */
QPushButton {
    background-color: #4A90E2;
    color: #FFFFFF;
    border: none;
    padding: 10px 20px;
    border-radius: 6px;
    font-size: 14px;
    font-weight: 500;
}

QPushButton:hover {
    background-color: #3A7BC8;
}

QPushButton:pressed {
    background-color: #2E6AAD;
}

QPushButton:disabled {
    background-color: #CBD5E0;
    color: #A0AEC0;
}

/* Secondary Button */
QPushButton[class="secondary"] {
    background-color: #E8EDF2;
    color: #4A5568;
}

QPushButton[class="secondary"]:hover {
    background-color: #D4DCE6;
}

/* Danger Button */
QPushButton[class="danger"] {
    background-color: #E53E3E;
    color: #FFFFFF;
}

QPushButton[class="danger"]:hover {
    background-color: #C53030;
}

/* Success Button */
QPushButton[class="success"] {
    background-color: #38A169;
    color: #FFFFFF;
}

QPushButton[class="success"]:hover {
    background-color: #2F855A;
}

/* Line Edit (Input) */
QLineEdit {
    background-color: #FFFFFF;
    border: 2px solid #E0E4E8;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #2D3748;
}

QLineEdit:focus {
    border: 2px solid #4A90E2;
}

QLineEdit:disabled {
    background-color: #F7FAFC;
    color: #A0AEC0;
}

/* Text Edit (Multiline) */
QTextEdit {
    background-color: #FFFFFF;
    border: 2px solid #E0E4E8;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #2D3748;
}

QTextEdit:focus {
    border: 2px solid #4A90E2;
}

/* Table Widget */
QTableWidget {
    background-color: #FFFFFF;
    border: 1px solid #E0E4E8;
    border-radius: 8px;
    gridline-color: #E0E4E8;
    selection-background-color: #BEE3F8;
    selection-color: #2D3748;
}

QTableWidget::item {
    padding: 8px;
}

QTableWidget::item:selected {
    background-color: #BEE3F8;
    color: #2D3748;
}

QTableWidget::item:hover {
    background-color: #EDF2F7;
}

QHeaderView::section {
    background-color: #F7FAFC;
    color: #4A5568;
    padding: 10px;
    border: none;
    border-bottom: 2px solid #E0E4E8;
    font-weight: 600;
    font-size: 13px;
}

/* Scroll Bar */
QScrollBar:vertical {
    background-color: #F7FAFC;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #CBD5E0;
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: #A0AEC0;
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #F7FAFC;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #CBD5E0;
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #A0AEC0;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* Check Box */
QCheckBox {
    color: #2D3748;
    font-size: 14px;
    spacing: 8px;
}

QCheckBox::indicator {
    width: 20px;
    height: 20px;
    border: 2px solid #CBD5E0;
    border-radius: 4px;
    background-color: #FFFFFF;
}

